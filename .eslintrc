{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["svelte3", "@typescript-eslint"],
  "settings": {
    "svelte3/ignore-styles": true
  },
  "extends": "standard",
  "parserOptions": {
    "extraFileExtensions": [".svelte"],
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    },
    "ignore": ["less"]
  },
  "rules": {
    "semis": 0,
    "space-before-function-paren": 0,
    "no-console": "off",
    "import/first": "off"
  }
}
